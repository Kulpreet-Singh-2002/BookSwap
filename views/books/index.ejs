<% layout('layouts/boilerplate') %>

    <div class="container">

        <!-- ðŸŒŸ Top Section -->
        <div class="text-center py-5"
            style="background: linear-gradient(to right, #0b2228, #0f3578); color: white; border-radius: 12px; margin-bottom: 2rem;">
            <h1 class="display-4 fw-bold text-shadow" style="color: white;">ðŸ“š Find your Book</h1>
            <p class="lead">Browse pre-loved books shared by our community</p>

            <!-- ðŸ” Search Bar -->
            <form class="row justify-content-center mt-4" method="GET" action="/books">
                <div class="col-md-6">
                    <input type="text" class="form-control form-control-lg" name="q"
                        placeholder="ðŸ” Search by title, author, or description..." value="<%= searchQuery || '' %>">
                </div>
                <div class="col-auto">
                    <button type="submit" class="btn btn-warning btn-lg">Search</button>
                </div>
            </form>

            <a href="/books/new" class="btn btn-warning btn-lg mt-3">ðŸ“¤ Sell your Book</a>
        </div>

        <% books.forEach(book=> { %>
            <div class="card mb-4 border-0 shadow-lg rounded-4 overflow-hidden">
                <div class="row g-0">
                    <div class="col-md-4">
                        <% if (book.images.length) { %>
                            <img src="<%= book.images[0].url %>" alt="Book image" class="img-fluid rounded-start"
                                style="width: 400px; height: 400px; object-fit: cover;">
                            <% } else { %>
                                <img src="https://media.istockphoto.com/id/1352945762/vector/no-image-available-like-missing-picture.jpg?s=612x612&w=0&k=20&c=4X-znbt02a8EIdxwDFaxfmKvUhTnLvLMv1i1f3bToog="
                                    alt="No image available" class="img-fluid rounded-start"
                                    style="width: 400px; height: 400px; object-fit: cover;">
                                <% } %>
                    </div>
                    <div class="col-md-8 bg-light d-flex align-items-center">
                        <div class="card-body">
                            <h5 class="card-title fw-bold text-primary mb-2">
                                <%= book.title %> <small class="text-muted">by <%= book.authorName %></small>
                            </h5>
                            <p class="card-text text-muted" style="font-size: 0.95rem;">
                                <%= book.description.substring(0, 150) %>...
                            </p>
                            <p class="card-text mb-2">
                                <small class="text-secondary"><i class="bi bi-geo-alt-fill"></i>
                                    <%= book.location %>
                                </small>
                            </p>
                            <p class="card-text mb-3">
                                <span class="badge bg-success">â‚¹ <%= book.price %></span>

                                <% let conditionClass; %>
                                    <% switch (book.condition) { case 'Like New' :
                                        conditionClass='bg-success text-white' ; break; case 'Good' :
                                        conditionClass='bg-primary text-white' ; break; case 'Acceptable' :
                                        conditionClass='bg-warning text-dark' ; break; case 'Poor' :
                                        conditionClass='bg-danger text-white' ; break; default:
                                        conditionClass='bg-secondary text-white' ; } %>

                                        <span class="ms-3 badge <%= conditionClass %>">
                                            <%= book.condition %>
                                        </span>
                            </p>
                            <a href="/books/<%= book._id %>" class="btn btn-outline-primary">ðŸ“˜ View</a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>

                <!-- ðŸ” Pagination -->
                <div class="d-flex justify-content-center">
                    <nav>
                        <ul class="pagination pagination-lg">
                            <% if (currentPage> 1) { %>
                                <li class="page-item">
                                    <a class="page-link"
                                        href="?page=<%= currentPage - 1 %><%= searchQuery ? `&q=${searchQuery}` : '' %>">Â«
                                        Prev</a>
                                </li>
                                <% } else { %>
                                    <li class="page-item disabled"><span class="page-link">Â« Prev</span></li>
                                    <% } %>

                                        <% for (let i=1; i <=totalPages; i++) { %>
                                            <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                <a class="page-link"
                                                    href="?page=<%= i %><%= searchQuery ? `&q=${searchQuery}` : '' %>">
                                                    <%= i %>
                                                </a>
                                            </li>
                                            <% } %>

                                                <% if (currentPage < totalPages) { %>
                                                    <li class="page-item">
                                                        <a class="page-link"
                                                            href="?page=<%= currentPage + 1 %><%= searchQuery ? `&q=${searchQuery}` : '' %>">Next
                                                            Â»</a>
                                                    </li>
                                                    <% } else { %>
                                                        <li class="page-item disabled"><span class="page-link">Next
                                                                Â»</span></li>
                                                        <% } %>
                        </ul>
                    </nav>
                </div>

    </div>